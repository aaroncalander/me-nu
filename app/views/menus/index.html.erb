<h1>Weekly Menu</h1>

<h3>Appetizers</h3>
<ul>
<% @appetizers.first(5).each do |appetizer| %>
  <%= appetizer.name %>
  <% @ratings = appetizer.ratings %>
  <% @total = @ratings.reduce(0) { |sum, rating| sum += rating.value } %>
  <% @total %><br>
<% end %>

</ul>

<h3>Salads</h3>
<ul>
<% @salads.first(5).each do |salad| %>
  <%= salad.name %><br>
<% end %>
</ul>

<h3>Entrees</h3>
<ul>
<% @entrees.first(5).each do |entree| %>
  <%= entree.name %><br>
<% end %>
</ul>

<h3>Desserts</h3>
<ul>
<% @desserts.first(5).each do |dessert| %>
  <%= dessert.name %><br>
<% end %>
</ul>
